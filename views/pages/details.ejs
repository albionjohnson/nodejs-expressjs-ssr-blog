<!DOCTYPE html>
<html lang="en">

<%-include('../components/head.ejs')%>

    <body>
        <div>
            <%- include('../components/navbar.ejs') %>
            <% if (blog.thumbnailUrl) { %>
                <div id="thumb">
                    <div>
                        <img id="thumbnail" src="\<%= blog.thumbnailUrl %>" alt="<%= blog.thumbnailName %>">
                    </div>
                    <div class="abstract-image"></div>
                </div>
            <% } %>
                <div class="blog-detail">
                    <a href="/delete/<%= blog.id %>">
                        <button>Delete</button>
                    </a>
                    <p class="createdAt">
                        <%= createdAt %>
                    </p>
                    <p class="blog-title">
                        <%= blog.title %>
                    </p>
                    <p class="body">
                        <%= blog.body %>
                    </p>
                </div>
        </div>
        <%- include('../components/footer.ejs') %>
    </body>

</html>